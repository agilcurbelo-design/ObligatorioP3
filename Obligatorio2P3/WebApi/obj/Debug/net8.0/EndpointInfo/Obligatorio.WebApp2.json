    "/api/Equipos/pagos-mayores/{monto}": {
      "get": {
        "tags": [
          "Equipos"
        ],
        "summary": "Obtiene los equipos cuyos empleados realizaron pagos individuales mayores al monto indicado.",
        "parameters": [
          {
            "name": "monto",
            "in": "path",
            "description": "Monto mínimo (decimal)",
            "required": true,
            "schema": {
              "type": "number",
              "format": "double"
            }
          },
          {
            "name": "includeUsers",
            "in": "query",
            "description": "Incluir lista de usuarios por equipo (opcional)",
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
