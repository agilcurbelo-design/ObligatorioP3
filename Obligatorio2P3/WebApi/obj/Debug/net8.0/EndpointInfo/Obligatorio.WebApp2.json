  "components": {
    "schemas": {
      "CrearPagoDTO": {
        "type": "object",
        "properties": {
          "usuarioId": {
            "type": "integer",
            "format": "int32"
          },
          "tipoGastoId": {
            "type": "integer",
            "format": "int32"
          },
          "monto": {
            "type": "number",
            "format": "double"
          },
          "fecha": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "metodoPago": {
            "$ref": "#/components/schemas/MetodoPago"
          },
          "esRecurrente": {
            "type": "boolean"
          },
          "periodoMeses": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "descripcion": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginDTO": {
        "required": [
          "contrasenia",
          "email"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "contrasenia": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "MetodoPago": {
        "enum": [
          "CREDITO",
          "EFECTIVO"
        ],
        "type": "string"
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "ResetPasswordRequestDTO": {
        "type": "object",
        "properties": {
          "usuarioId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ResetPasswordResponseDTO": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "nuevaPassword": {
            "type": "string",
            "nullable": true
          },
          "mensaje": {
            "type": "string",
            "nullable": true
          },
          "usuarioId": {
            "type": "integer",
            "format": "int32"
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "nombreCompleto": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "oauth2": {
        "type": "apiKey",
        "description": "Autorización estándar mediante esquema Bearer",
        "name": "Authorization",
        "in": "header"
