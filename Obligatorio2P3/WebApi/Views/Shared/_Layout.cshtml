<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Obligatorio.WebApp2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Obligatorio.WebApp2.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var rol = Context.Session.GetString("rol");
        var usuario = Context.Session.GetString("usuario");
    }

    <header>
        @if (!string.IsNullOrEmpty(usuario))
        {
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">MiApp</a>
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                            <li class="nav-item">
                                @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })
                            </li>

                            <li class="nav-item">
                                @Html.ActionLink("Registrar Pago", "CrearPago", "Pago", null, new { @class = "nav-link" })
                            </li>

                            @if (rol == "Administrador")
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Tipos de Gasto", "Index", "TipoGasto", null, new { @class = "nav-link" })
                                </li>
                            }

                            @if (rol == "Gerente")
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Listado Mensual", "ListarPagos", "Pago", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Usuarios con pagos altos", "UsuariosConPagosSuperiores", "Pago", null, new { @class = "nav-link" })
                                </li>
                            }


                            @if (rol == "Empleado")
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Listado Mensual", "ListarPagos", "Pago", null, new { @class = "nav-link" })
                                </li>
                                
                            }
                            @if (rol == "Gerente" || rol == "Administrador")
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Alta de Usuario", "Create", "Usuario", null, new { @class = "nav-link" })
                                </li>
                            }
                            @if (rol == "Gerente" || rol == "Empleado")
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Pago Por Uusario", "GetPagosPorUsuario", "Pago", null, new { @class = "nav-link" })
                                </li>
                            }

                            <li class="nav-item">
                                @Html.ActionLink("Cerrar sesión", "Logout", "Login", null, new { @class = "nav-link" })
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
    </header>

    <main role="main" class="container mt-3">
        @RenderBody()
    </main>

    <footer class="footer bg-light text-center py-3">
        <span>&copy; @DateTime.Now.Year - Obligatorio.WebApp2</span>
    </footer>
</body>
</html>
