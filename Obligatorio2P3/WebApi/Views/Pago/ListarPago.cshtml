@model IEnumerable<Obligatorio.LogicaDeAplicacion.DTOs.PagoListadoDTO>

<h2>Listado de Pagos</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-info">@TempData["Mensaje"]</div>
}

<form asp-action="ListarPagos" method="get" class="form-inline mb-3">
    <label for="mes">Mes:</label>
    <select id="mes" name="mes" class="form-control mx-2">
        @for (int i = 1; i <= 12; i++)
        {
            <option value="@i">@i</option>
        }
    </select>

    <label for="anio">Año:</label>
    <input type="number" id="anio" name="anio" class="form-control mx-2" value="@DateTime.Now.Year" />

    <button type="submit" class="btn btn-primary">Buscar</button>
</form>