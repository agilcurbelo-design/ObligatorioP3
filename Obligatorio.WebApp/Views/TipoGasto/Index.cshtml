@model IEnumerable<WebApp.DTOs.PagoListadoDTO>
@{
    ViewData["Title"] = "Tipos de Gasto";
}

<h2>Tipos de Gasto</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Tipo de Gasto</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay tipos de gasto.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.TipoGasto</td>
                    <td>@t.Descripcion</td>
                    <td>
                     
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
}