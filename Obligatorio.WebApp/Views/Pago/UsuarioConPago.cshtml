@model IEnumerable<WebApp.DTOs.PagoDTO>

@{
    ViewData["Title"] = "UsuarioConPago";
}


<h3>Pagos</h3>
<form asp-action="BuscarUsuarioID" method="post" class="mb-3">
    <div class="form-group">
        <label for="usuarioId">Usuario Id</label>
        <input id="usuarioId" name="usuarioId" type="number" class="form-control" />
    </div>



    <button type="submit" class="btn btn-primary w-100">Ingresar</button>
</form>
@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No hay pagos para este usuario.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th style="width:70px">Id</th>
                <th>Monto</th>
                <th>Fecha</th>
                <th>Tipo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pago in Model)
            {
                <tr>
                    <td>@pago.Id</td>
                    <td>@pago.Monto.ToString("C")</td>
                    <td>@pago.Fecha.ToString("yyyy-MM-dd")</td>
                    <td>@pago.TipoGastoNombre</td>
                </tr>
            }
        </tbody>
    </table>


}

<div class="mt-3">
    <a class="btn btn-secondary" href="@Url.Action("Index", "Home")">Volver</a>
</div>
