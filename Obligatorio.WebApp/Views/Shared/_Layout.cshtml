@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Accessor

@{
    Layout = null;
    var token = Accessor.HttpContext.Session.GetString("Token");
    var rol = Accessor.HttpContext.Session.GetString("Rol");
    var usuario = Accessor.HttpContext.Session.GetString("usuario");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Obligatorio.WebApp2</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Obligatorio.WebApp2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">MiApp</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })
                        </li>

                        @if (!string.IsNullOrEmpty(token))
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Registrar Pago", "CrearPago", "Pago", null, new { @class = "nav-link" })
                            </li>

                            @* Opciones para Administrador *@
                            @if (rol == "Administrador")
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Tipos de Gasto", "Index", "TipoGasto", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item">
                                    @Html.ActionLink("Auditoría", "Index", "Auditoria", null, new { @class = "nav-link" })
                                </li>

                            }

                            @* Opciones para Gerente *@
                            @if (rol == "Gerente")
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Equipos - Pagos mayores", "PagosMayores", "Equipo", null, new { @class = "nav-link" })
                                </li>



                            }

                            @* Opciones para Empleado *@
                            @if (rol == "Empleado")
                            {
                          
                            }

                            @* Alta de usuario para Gerente o Administrador *@
                            @if (rol == "Gerente" || rol == "Administrador")
                            {
                            
                            }

                            @if (rol == "Gerente" || rol == "Empleado")
                            {
                                <li class="nav-item">
                                    @Html.ActionLink("Pago Por Usuario", "Index", "Pago", null, new { @class = "nav-link" })
                                </li>
                            }

                            <li class="nav-item">
                                @Html.ActionLink("Cerrar sesión", "Logout", "Home", null, new { @class = "nav-link" })
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                @Html.ActionLink("Ingresar", "Login", "Home", null, new { @class = "nav-link" })
                            </li>
                        }
                    </ul>

                    @if (!string.IsNullOrEmpty(token))
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <span class="nav-link disabled">Hola, @usuario</span>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container mt-3">
        @RenderBody()
    </main>

    <footer class="footer bg-light text-center py-3 mt-4">
        <div class="container">
            <span>&copy; @DateTime.Now.Year - Obligatorio.WebApp2</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
